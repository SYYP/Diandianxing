<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_bei">

    <RelativeLayout
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:background="@drawable/img_person"
        android:layout_width="match_parent"
        android:layout_height="220dp">
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="6dp"
            android:id="@+id/iv_callback"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_ge_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="个人中心"
            android:id="@+id/zhong"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/you"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@drawable/img_set"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <www.diandianxing.com.diandianxing.utils.ImageViewPuls
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_below="@id/rela"
            android:id="@+id/my_photo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:src="@drawable/img_motou"
            android:layout_height="60dp" />
        <!--<www.diandianxing.com.diandianxing.utils.CircleImageView-->
            <!--android:scaleType="centerCrop"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_below="@id/rela"-->
            <!--android:id="@+id/my_photo"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_width="60dp"-->
            <!--android:src="@drawable/img_motou"-->
            <!--android:layout_height="60dp" />-->
        <TextView
           android:layout_marginTop="10dp"
            android:id="@+id/diandianxing"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_below="@id/my_photo"
            android:textSize="16sp"
            android:text="点点行共享单车"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="12dp"
            android:id="@+id/my_xinyong"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="信用分 30分"
            android:padding="2dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_qingradioline"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/diandianxing"
            android:layout_width="120dp"
            android:layout_height="45dp" />
    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/shape_radioline"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/real_myallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/img_wallet"
                android:text="我的钱包"
                android:id="@+id/my_wallet"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/black_san"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView

                android:padding="3dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/set_next"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/font_black_5"
                android:layout_below="@id/my_wallet"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/real_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/img_car"
                android:text="我的行程"
                android:id="@+id/my_car"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/black_san"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView

                android:padding="3dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/set_next"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/font_black_5"
                android:layout_below="@id/my_car"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/real_yaoqing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/img_yaoqing"
                android:text="邀请好友"
                android:id="@+id/my_yaoqing"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/black_san"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:padding="3dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/set_next"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/font_black_5"
                android:layout_below="@id/my_yaoqing"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/real_kefu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="3dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/set_next"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/text_kefu"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/img_kefu"
                android:text="我的客服"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/black_san"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/font_black_5"
                android:layout_below="@id/text_kefu"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/real_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_tentqq"
                android:text="QQ"
                android:id="@+id/my_qq"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/black_san"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
              android:id="@+id/iv_backss"
                android:padding="3dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/set_next"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:textColor="@color/black_san"
                android:id="@+id/qq_text"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:text="未绑定"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_backss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/font_black_5"
                android:layout_below="@id/my_qq"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/real_wei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_tent_wei"
                android:text="微信"
                android:id="@+id/my_weichat"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/black_san"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                  android:id="@+id/iv_backs"
                android:padding="3dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/set_next"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:textColor="@color/black_san"
                android:id="@+id/wei_text"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:text="未绑定"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_backs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/my_weichat"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
