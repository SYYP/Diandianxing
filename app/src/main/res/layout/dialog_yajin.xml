<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/shape_radioline"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="5dp"
        android:scaleType="center"
        android:src="@drawable/img_tuihuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="30dp"
        android:lineSpacingMultiplier="1.1"
        android:lineSpacingExtra="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black_san"
        android:textSize="18sp"
        android:text="押金一般在7-15个工作日内退换，在此期间，您将不能使用此共享单车，确认要进行退款?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/font_black_5"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <TextView
               android:gravity="center"
               android:layout_centerVertical="true"
               android:id="@+id/tuihuan"
               android:textSize="18sp"
               android:textColor="@color/black_san"
               android:text="押金退款"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent" />
           <View
               android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"
               android:background="@color/font_black_5"
               android:layout_width="1dp"
               android:layout_height="match_parent"></View>
           <TextView
               android:layout_centerVertical="true"
               android:id="@+id/pause"
               android:gravity="center"
               android:layout_alignParentRight="true"
             android:layout_weight="1"
               android:textSize="18sp"
               android:textColor="@color/black_san"
               android:text="取消"
               android:layout_width="0dp"
               android:layout_height="match_parent" />
       </LinearLayout>
</LinearLayout>