<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/back_bei">
<include
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    layout="@layout/include_count"></include>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_radioline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textCursorDrawable="@drawable/shap_ed"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:id="@+id/forget_phone"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/black_san"
                android:hint="请输入手机号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/font_black_5"
                android:layout_below="@id/forget_phone"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textCursorDrawable="@drawable/shap_ed"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:id="@+id/forget_yanzheng"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/black_san"
                android:hint="请输入验证码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/forget_huoqu"
                android:textColor="@color/text_orage"
                android:padding="10dp"
                android:text="获取验证码"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/font_black_5"
                android:layout_below="@id/forget_yanzheng"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textCursorDrawable="@drawable/shap_ed"
                android:layout_marginLeft="5dp"
                android:inputType="textPassword"
                android:background="@null"
                android:id="@+id/forget_newpwd"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/black_san"
                android:hint="请输入新密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/font_black_5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/forget_newpwd"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textCursorDrawable="@drawable/shap_ed"
                android:layout_marginLeft="5dp"
                android:inputType="textPassword"
                android:background="@null"
                android:id="@+id/forget_okpwd"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/black_san"
                android:hint="请输入确认密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/forget_okpwd"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_redradius"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <TextView
            android:elevation="100dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="5dp"
            android:id="@+id/forget_ok"
            android:layout_centerHorizontal="true"
            android:text="立即找回"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>
