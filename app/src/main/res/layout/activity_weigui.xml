<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">


    <LinearLayout

        android:background="@drawable/shape_tishiradioline"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="center"
                android:src="@drawable/imgweiting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                 android:id="@+id/text_context"
                android:lineSpacingMultiplier="1.2"
                android:text="您正在进行临时停车操作，记得\n给你的爱车上锁喔~"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:textColor="@color/textcolcr"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/lin_ok"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_backorageradioline"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/btn_ok"
                    android:gravity="center"
                    android:text="我能解决，扫码开锁"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
           <LinearLayout
               android:id="@+id/lin_no"
               android:layout_marginBottom="20dp"
               android:background="@drawable/shape_oragebian"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_width="match_parent"
               android:layout_height="50dp">
            <TextView
                android:id="@+id/btn_kefu"

                android:gravity="center"
                android:text="不能解决，联系客服"
                android:textColor="@color/orage_back"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
           </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
