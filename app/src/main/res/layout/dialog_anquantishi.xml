<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
            <LinearLayout

                android:background="@drawable/shape_tishiradioline"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                  <LinearLayout
                      android:layout_marginTop="10dp"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="center"
                            android:src="@drawable/imgweiting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="安全小贴士"
                            android:textColor="@color/textcolcr"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:lineSpacingMultiplier="1.2"
                            android:text="临时停车后需要关锁，且持续计费，直到您继续骑行后直接关锁，就可以结束订单啦。"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:textColor="@color/textcolcr"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:id="@+id/lin_no"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/shape_oragebian"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                              <TextView
                                  android:id="@+id/btn_ok"
                                  android:layout_marginTop="5dp"
                                  android:gravity="center"
                                  android:text="我知道了"
                                  android:textColor="@color/textcolcr"
                                  android:textSize="16sp"
                                  android:padding="10dp"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content" />
                        </LinearLayout>
                  </LinearLayout>
            </LinearLayout>
      </LinearLayout>


