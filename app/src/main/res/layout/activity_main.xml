<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/back_bei"
    android:fitsSystemWindows="true"
    tools:context="www.diandianxing.com.diandianxing.MainActivity">
    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        </com.amap.api.maps.MapView>
   <RelativeLayout
       android:background="@color/xu_white"

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/relativeLayout">
       <ImageView
           android:id="@+id/img_my"
           android:layout_marginLeft="10dp"
           android:src="@drawable/img_my"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <ImageView
           android:layout_centerVertical="true"
           android:layout_centerHorizontal="true"
           android:src="@drawable/img_diandianxing"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <ImageView
           android:id="@+id/img_message"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
           android:src="@drawable/img_message"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/liner_jishi"
        android:layout_below="@id/relativeLayout"
          android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">


        <LinearLayout

            android:background="@drawable/shape_inforshang"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bike_number"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:text="正在用车:123456789"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:text="手动关锁即可结束计费"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/shape_inforxia"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/qi_time"
                    android:layout_marginLeft="70dp"
                    android:padding="8dp"
                    android:text="1分钟"
                    android:textSize="16sp"
                    android:textColor="@color/text_orage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/qi_juli"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="70dp"
                    android:padding="8dp"
                    android:text="1.1米"
                    android:textSize="16sp"
                    android:textColor="@color/text_orage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="70dp"
                    android:padding="5dp"
                    android:text="骑行时间"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:layout_alignParentRight="true"
                    android:layout_marginRight="70dp"
                    android:padding="5dp"
                    android:text="骑行距离"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/main_liner"
        android:background="@drawable/shape_chongzhi"
        android:layout_marginTop="30dp"
        android:layout_below="@id/relativeLayout"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="您尚未充值押金，无法完成租车服务"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
            android:textSize="12sp"
            android:id="@+id/jiaona"
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="一键缴纳"
            android:background="@drawable/shape_baibian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/shape_radioline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_marginTop="180dp"
        android:id="@+id/linearLayout3">
        <ImageView
            android:id="@+id/iv_search"
            android:padding="12dp"
            android:src="@drawable/img_sou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_kefu"
            android:padding="12dp"
            android:src="@drawable/img_ke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_refresh"
            android:padding="12dp"
            android:src="@drawable/img_shua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_address"
            android:padding="12dp"
            android:src="@drawable/img_ding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView

        android:id="@+id/iv_lock"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/img_sao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:visibility="gone"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/shape_blackradius"
        android:id="@+id/btn_linshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_tingche"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/text_orage"
            android:padding="10dp"
            android:text="临时停车"
            android:layout_width="120dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="200dp"
        android:id="@+id/liner_mark"
        android:layout_toLeftOf="@id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white">


        <LinearLayout

            android:background="@drawable/shape_inforshang"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/infor_address"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:text="北京市东城区长安街天安门"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/img_baiding"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout


            android:background="@drawable/shape_inforxia"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/infor_juli"
                    android:layout_marginLeft="10dp"
                    android:padding="8dp"
                    android:text="123米"
                    android:textSize="14sp"
                    android:textColor="@color/text_orage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:layout_centerHorizontal="true"
                    android:id="@+id/infor_time"
                    android:layout_marginLeft="10dp"
                    android:padding="8dp"
                    android:text="123分钟"
                    android:textSize="14sp"
                    android:textColor="@color/text_orage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/infor_chewei"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:text="5辆"
                    android:textSize="14sp"
                    android:textColor="@color/text_orage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/miao_juli"
                    android:layout_marginLeft="10dp"
                    android:padding="1dp"
                    android:text="距离你的位置"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/miao_time"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:padding="1dp"
                    android:text="步行时间"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                     android:id="@+id/miao_shengyu"
                    android:layout_marginRight="10dp"
                    android:padding="1dp"
                    android:text="剩余停车位"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/real_gongxiang"
        android:orientation="vertical"
        android:background="@drawable/shape_radioline"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp">
        <ImageView
            android:id="@+id/img_che"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_gongbick"
            android:layout_width="30dp"
            android:layout_height="20dp" />
        <TextView
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:drawablePadding="10dp"
            android:text="共享单车"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



</LinearLayout>
    <LinearLayout
        android:id="@+id/real_dianzi"
        android:orientation="vertical"
        android:background="@drawable/shape_radioline"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">
        <ImageView
              android:id="@+id/img_wei"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_dianziwei"
            android:layout_width="25dp"
            android:layout_height="20dp" />
        <TextView
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:text="电子围栏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
</RelativeLayout>
